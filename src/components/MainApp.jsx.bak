    try {
      // –ò—Å–ø–æ–ª—å–∑—É–µ–º SupabaseManager –µ—Å–ª–∏ –µ—Å—Ç—å —Ä–µ–∞–ª—å–Ω—ã–µ —á–∞—Ç—ã
      if (supabaseChats.length > 0 && selectedChat.id && typeof selectedChat.id === 'string') {
        await window.supabaseManager.sendMessage(selectedChat.id, messageInput);
      }
      
      // –û–±–Ω–æ–≤–ª—è–µ–º –ª–æ–∫–∞–ª—å–Ω—ã–π state
      const newMessage = {
        id: Date.now(),
        text: messageInput,
        sender: 'me',
        time: new Date().toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' })
      };
      
      const updatedChat = {
        ...selectedChat,
        messages: [...selectedChat.messages, newMessage],
        lastMessage: messageInput,
        time: newMessage.time
      };
      
      setSelectedChat(updatedChat);
      setChats(chats.map(c => c.id === selectedChat.id ? updatedChat : c));
      setMessageInput('');
      
      // –ü—Ä–æ–∫—Ä—É—Ç–∫–∞ –∫ –Ω–æ–≤–æ–º—É —Å–æ–æ–±—â–µ–Ω–∏—é
      setTimeout(() => {
        messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
