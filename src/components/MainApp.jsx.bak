        // –°–æ–∑–¥–∞–µ–º —á–∞—Ç –≤ Supabase –µ—Å–ª–∏ –µ—Å—Ç—å –ø–æ–¥–∫–ª—é—á–µ–Ω–∏–µ
        if (window.supabaseManager && currentBiker.id) {
          const userId = localStorage.getItem('userId');
          const newChat = await window.supabaseManager.createChat(userId, currentBiker.id);
          
          // –î–æ–±–∞–≤–ª—è–µ–º –≤ –ª–æ–∫–∞–ª—å–Ω—ã–µ —á–∞—Ç—ã
          const chatData = {
            id: newChat.id,
            name: currentBiker.name,
            image: currentBiker.images[0],
            lastMessage: '–ù–æ–≤—ã–π –º—ç—Ç—á!',
            time: new Date().toLocaleTimeString('ru-RU', { hour: '2-digit', minute: '2-digit' }),
            online: true,
            unreadCount: 1,
            messages: []
          };
          setChats(prev => [...prev, chatData]);
        }
        
        setMatchData(currentBiker);
        setHasNewMatchNotification(true);
        setNewMatches(prev => [{...currentBiker, isNew: true}, ...prev]);
      } catch (err) {
        console.error('Error creating chat:', err);
        setError('–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è —á–∞—Ç–∞');
      }
    } else {
        handleNext();
    }
  };

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–≤–∞–π–ø–æ–≤ –≤ —Å—Ç–∏–ª–µ Tinder
  const handleTouchStart = (e) => {
    const touch = e.touches[0];
    setDragStart({ x: touch.clientX, y: touch.clientY });
    setIsDragging(true);
  };

  const handleTouchMove = (e) => {
    if (!isDragging) return;
    const touch = e.touches[0];
    const deltaX = touch.clientX - dragStart.x;
    const deltaY = touch.clientY - dragStart.y;
    
    // –ï—Å–ª–∏ —Å–≤–∞–π–ø –±–æ–ª—å—à–µ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏, —á–µ–º –ø–æ –≤–µ—Ä—Ç–∏–∫–∞–ª–∏ - —ç—Ç–æ —Å–≤–∞–π–ø –≤–ª–µ–≤–æ/–≤–ø—Ä–∞–≤–æ
    // –ò–≥–Ω–æ—Ä–∏—Ä—É–µ–º –µ—Å–ª–∏ —Å–≤–∞–π–ø –≤ –æ—Å–Ω–æ–≤–Ω–æ–º –≤–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–π (—Å–∫—Ä–æ–ª–ª)
    if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 10) {
      setDragOffset({ x: deltaX, y: 0 });
    }
  };

  const handleTouchEnd = () => {
    if (!isDragging) return;
    
    const threshold = 100; // –ú–∏–Ω–∏–º–∞–ª—å–Ω–æ–µ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –¥–ª—è —Å–≤–∞–π–ø–∞
    
    if (Math.abs(dragOffset.x) > threshold) {
      if (dragOffset.x > 0) {
        // –°–≤–∞–π–ø –≤–ø—Ä–∞–≤–æ - –ª–∞–π–∫
        handleLike();
      } else {
        // –°–≤–∞–π–ø –≤–ª–µ–≤–æ - –ø—Ä–æ–ø—É—Å–∫
        handleNext();
      }
    }
    
    setIsDragging(false);
    setDragOffset({ x: 0, y: 0 });
  };

  // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –º—ã—à–∏ (–¥–ª—è –¥–µ—Å–∫—Ç–æ–ø–∞)
  const handleMouseDown = (e) => {
    setDragStart({ x: e.clientX, y: e.clientY });
    setIsDragging(true);
  };

  const handleMouseMove = (e) => {
    if (!isDragging) return;
    const deltaX = e.clientX - dragStart.x;
    const deltaY = e.clientY - dragStart.y;
    
    // –ï—Å–ª–∏ —Å–≤–∞–π–ø –±–æ–ª—å—à–µ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏, —á–µ–º –ø–æ –≤–µ—Ä—Ç–∏–∫–∞–ª–∏ - —ç—Ç–æ —Å–≤–∞–π–ø –≤–ª–µ–≤–æ/–≤–ø—Ä–∞–≤–æ
    if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > 10) {
      setDragOffset({ x: deltaX, y: 0 });
    }
  };

  const handleMouseUp = () => {
    if (!isDragging) return;
    
    const threshold = 100;
    
    if (Math.abs(dragOffset.x) > threshold) {
      if (dragOffset.x > 0) {
        handleLike();
      } else {
        handleNext();
      }
    }
    
    setIsDragging(false);
    setDragOffset({ x: 0, y: 0 });
  };

  // –ó–∞–∫—Ä—ã–≤–∞–µ–º –º—ç—Ç—á –ø—Ä–∏ —Å–º–µ–Ω–µ –≤–∫–ª–∞–¥–∫–∏
  useEffect(() => {
    if (activeTab !== 'search') {
      setMatchData(null);
    }
  }, [activeTab]);

  const switchImage = (e) => {
    if (!currentBiker) return;
    const rect = e.currentTarget.getBoundingClientRect();
    const x = e.clientX - rect.left;
    if (x > rect.width / 2) {
      if (currentImageIndex < currentBiker.images.length - 1) {
        setCurrentImageIndex(prev => prev + 1);
      } else {
        setCurrentImageIndex(0);
      }
    } else {
      if (currentImageIndex > 0) {
