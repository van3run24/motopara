    setChats(updatedChats);
    // –£–±–∏—Ä–∞–µ–º –∏–∑ –Ω–æ–≤—ã—Ö –º—ç—Ç—á–µ–π
    setNewMatches(prev => prev.map(m => m.id === chat.id || m.name === chat.name ? {...m, isNew: false} : m));
