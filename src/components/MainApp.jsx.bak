          reader.readAsDataURL(file);
        }
      } catch (err) {
        console.error('Error uploading image:', err);
        setError('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ñ–æ—Ç–æ');
